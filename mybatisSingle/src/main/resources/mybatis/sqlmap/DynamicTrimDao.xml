<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forever.mybatissingle.dao.DynamicTrimDao">

    <!--
    trim标签 代替完成Where的功能
    prefix : 拼接sql语句的前缀
    prefixOverrides : 覆盖第一个的前缀
    -->
    <select id="getDataByTrimReplaceWhere" resultType="com.forever.mybatissingle.mode.Person">
        select * FROM personDynamic
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="name!=null">
                and name = #{name}
            </if>
            <if test="age!=null">
                and age = #{age}
            </if>
        </trim>
    </select>


    <!--Trim标签代替Set标签
        suffixOverrides 覆盖的最后一个后缀
    -->
    <select id="updateDataByTrimReplaceSet" resultType="com.forever.mybatissingle.mode.Person">
        UPDATE personDynamic
        <trim prefix="SET" suffixOverrides=",">
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="age!=null">
                age = #{age},
            </if>
        </trim>
        where id = #{id}
    </select>


    <!--
    多个 PrefixOverrides的示例
    注意点:
    1.条件1||条件2;
    2.条件1|条件2;(使用该方式)
    -->
    <select id="getDataByTrimAndManyPrefixOverrides" resultType="com.forever.mybatissingle.mode.Person">
        select * FROM personDynamic
        <trim prefix="WHERE" prefixOverrides="AND|or">
            <if test="name!=null">
                and name = #{name}
            </if>
            <if test="age!=null">
                or age = #{age}
            </if>
        </trim>
    </select>


</mapper>
