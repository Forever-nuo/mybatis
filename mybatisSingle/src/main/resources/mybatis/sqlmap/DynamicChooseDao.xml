<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forever.mybatissingle.dao.DynamicChooseDao">


    <!--choose的使用示例-->
    <select id="testChoose" resultType="com.forever.mybatissingle.mode.Person">
        SELECT * FROM personDynamic
        <where>
            <choose>
                <when test="name=='王五'">
                    AND name = '王五'
                </when>
                <when test="name=='张三'">
                    and name = '张三'
                </when>
                <otherwise>
                    and name = '赵六'
                </otherwise>
            </choose>

        </where>
    </select>
</mapper>
