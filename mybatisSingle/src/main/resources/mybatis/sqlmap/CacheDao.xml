<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forever.mybatissingle.dao.CacheDao">

    <!---->
    <cache/>
    <update id="updatePerson">
        UPDATE  personDynamic SET
        name = #{name} where id = #{id}
    </update>


    <update id="updatePersonNoFlushCache" flushCache="false" >
        UPDATE  personDynamic SET
        name = #{name} where id = #{id}
    </update>


    <select id="getAllPerson" resultType="com.forever.mybatissingle.mode.Person">
        SELECT * FROM personDynamic
    </select>
    <select id="getPersonById" resultType="com.forever.mybatissingle.mode.Person" flushCache="false"  useCache="true">
        SELECT * FROM personDynamic WHERE  id = #{id}
    </select>
</mapper>
